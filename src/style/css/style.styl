// Neo Sans Pro
@import url('fonts/neosanspro/font.css')
// Open Sans
@import url('fonts/opensans/font.css')
@import url('../js-libs/fancybox/css/jquery.fancybox.css')
@import url('//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css')



$headblue = #31475d

html
	-ms-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	font-family 'Open Sans'
	line-height 1.414
	font-weight normal
body
	padding 0
	margin 0
	min-width 280px
.clearfix:after{
	content "."
	display block
	height 0
	visibility hidden
	clear both
}
a, input, textarea, button, img
	outline none
ul,li
	margin 0
	padding 0
	list-style-type none
a
	color $headblue
	text-decoration none
	border-bottom 1px solid $headblue
	&:hover
		color #ff7100
img
	width auto
	max-width 100%
button
	font-family 'Open Sans'
	cursor pointer
section
	box-sizing border-box
	width 100%
.layout
	max-width 1170px
	margin 0 auto
	position relative
h1
	font-family 'Neo Sans Pro'
	font-size 2.75rem
	font-weight normal
h2
	font-family 'Neo Sans Pro'
	font-size 2.5rem
	font-weight normal
	line-height 1.2


/* ------------- Топ-фикс ------------- */
.head
	background $headblue
	padding 15px 20px 15px 20px
	box-sizing border-box
.head-menu
	box-sizing border-box
	text-align center
.head-menu__item
	display inline-block
	padding-left 10px
	padding-right 10px
	&:first-child
		padding-left 0
	&:last-child
		padding-right 0
.head-menu__link
	color #fff
	border none
	&:hover
		color #ff7100
.head-menu__item_burger
	display none
	padding 0
.head-menu__submit
	border none
	color #fff
	text-transform uppercase
	font-weight bold
	padding 10px 15px
	background #ff7100
	border-radius 2px
	border-bottom 2px solid #c15906
	cursor pointer
	&:hover
		background #fe811e


/* ------------- Топ-маню-фикс ------------- */
.head-fixed
	background $headblue
	padding 15px 20px 15px 20px
	display none
	position fixed
.head-menu-fixed
	box-sizing border-box
	text-align center
	display none
.head-menu-fixed__item
	display inline-block
	padding-left 5px
	padding-right 5px
	&:first-child
		padding-left 0
	&:last-child
		padding-right 0
.head-menu-fixed__link
	color #fff
	border none
