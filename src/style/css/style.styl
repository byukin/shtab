// Neo Sans Pro
@import url('fonts/neosanspro/font.css')
// Open Sans
@import url('fonts/opensans/font.css')
@import url('../js-libs/fancybox/css/jquery.fancybox.css')
@import url('//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css')

$headblue = #31475d

html
	-ms-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	font-family 'Open Sans'
	line-height 1.414
	font-weight normal
body
	padding 0
	margin 0
.clearfix:after{
	content "."
	display block
	height 0
	visibility hidden
	clear both
}
ul,li
	margin 0
	padding 0
	list-style-type none
a
	color $headblue
	text-decoration none
	border-bottom 1px solid $headblue
	&:hover
		color red
img
	width auto
	max-width 100%
button
	font-family 'Open Sans'
	cursor pointer
section
	box-sizing border-box
	width 100%
.layout
	max-width 1170px
	min-width 1024px
	margin 0 auto
	position relative
h1
	font-family 'Neo Sans Pro'
	font-size 2.75rem
	font-weight normal
h2
	font-family 'Neo Sans Pro'
	font-size 2.5rem
	font-weight normal
	line-height 1.2


/* ------------- Топ-фикс ------------- */
.head
	background $headblue
	padding 15px 20px 15px 20px
.head-menu
	box-sizing border-box
	text-align center
.head-menu__item
	display inline-block
	padding-left 15px
	padding-right 15px
	&:first-child
		padding-left 0
	&:last-child
		padding-right 0
.head-menu__link
	color #fff
	border none
/* ------------- Топ-маню-фикс ------------- */
.head-fixed
	background $headblue
	padding 15px 20px 15px 20px
	display none
	position fixed
.head-menu-fixed
	box-sizing border-box
	text-align center
	display none
.head-menu-fixed__item
	display inline-block
	padding-left 15px
	padding-right 15px
	&:first-child
		padding-left 0
	&:last-child
		padding-right 0
.head-menu-fixed__link
	color #fff
	border none
/* ------------- Шапка ------------- */

.header
	padding 20px
.header-logo
	background-image url(icons/main-logo.svg)
	background-repeat no-repeat
	background-size cover
	width 255px
	height 60px
	float left
.header-contacts
	float right
	font-size 1.125rem
	margin-top 10px
.header-contacts__link
	color #000
	border-bottom none
.header-contacts__link_adress
	color #000
	border-bottom 1px dotted #000
.header-contacts__adress
	display inline-block
	margin-right 30px
	&:before
		content ""
		position relative
		display inline-block
		vertical-align middle
		width 30px
		height 30px
		margin-right 15px
